{
  "swagger": "2.0",
  "info": {
    "description": "These are the API docs for the Geosnapr application",
    "version": "1.0.0",
    "title": "Geosnapr",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "url": "https://geosnapr.com",
      "name": "Geosnapr",
      "email": "jacobbro@andrew.cmu.edu"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "localhost:8000",
  "basePath": "/v1",
  "schemes": [
    "http",
    "https"
  ],
  "tags": [
    {
      "name": "images",
      "description": "Access to Geosnapr images"
    },
    {
      "name": "albums",
      "description": "Access to Geosnapr image albums"
    }
  ],
  "paths": {
    "/image": {
      "post": {
        "tags": [
          "images"
        ],
        "summary": "Add a new image to the map",
        "description": "",
        "operationId": "addImage",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "image",
            "description": "Image object to be created",
            "required": false,
            "schema": {
              "$ref": "#/definitions/ImagePost"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "Client error",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "403": {
            "description": "Bad API key",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "200": {
            "descipton": "Successful Operation",
            "schema": {
              "$ref": "#/definitions/ImageGet"
            }
          }
        }
      }
    },
    "/image/{imageId}": {
      "get": {
        "tags": [
          "images"
        ],
        "summary": "Find image by id",
        "description": "",
        "operationId": "getImageById",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "imageId",
            "description": "ID of the image to be retrieved",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "404": {
            "description": "Image not found",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "403": {
            "description": "Bad API key",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "200": {
            "descipton": "Successful Operation",
            "schema": {
              "$ref": "#/definitions/ImageGet"
            }
          }
        }
      }
    },
    "/album": {
      "get": {
        "tags": [
          "albums"
        ],
        "summary": "List all albums for user",
        "description": "Retreives all the albums for the user associated with the given api key",
        "operationId": "getAlbumList",
        "produces": [
          "application/json"
        ],
        "responses": {
          "403": {
            "description": "Bad API key",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "200": {
            "descipton": "Successful Operation",
            "schema": {
              "$ref": "#/definitions/AlbumList"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "ImagePost": {
      "required": [
        "data"
      ],
      "properties": {
        "data": {
          "$ref": "#/definitions/ImagePostData"
        }
      }
    },
    "ImageGet": {
      "required": [
        "data"
      ],
      "properties": {
        "data": {
          "$ref": "#/definitions/ImageGetData"
        }
      }
    },
    "AlbumList": {
      "required": [
        "data"
      ],
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AlbumPostData"
          }
        }
      }
    },
    "AlbumPostData": {
      "required": [
        "type",
        "id",
        "attributes"
      ],
      "properties": {
        "type": {
          "type": "string",
          "example": "albums"
        },
        "id": {
          "type": "integer",
          "format": "int64",
          "example": 52
        },
        "attributes": {
          "$ref": "#/definitions/AlbumAttributes"
        }
      }
    },
    "AlbumAttributes": {
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "Spring Break"
        }
      }
    },
    "ImagePostData": {
      "required": [
        "type",
        "src_type",
        "attributes"
      ],
      "properties": {
        "type": {
          "type": "string",
          "example": "images"
        },
        "src_type": {
          "type": "string",
        },
        "attributes": {
          "$ref": "#/definitions/ImageAttributes"
        }
      }
    },
    "ImageGetData": {
      "required": [
        "type",
        "id",
        "attributes"
      ],
      "properties": {
        "type": {
          "type": "string",
          "example": "images"
        },
        "id": {
          "type": "integer",
          "format": "int64",
          "example": 52
        },
        "attributes": {
          "$ref": "#/definitions/ImageAttributes"
        },
        "relationships": {
          "$ref": "#/definitions/ImageRelationships"
        }
      }
    },
    "ImageAttributes": {
      "required": [
        "src",
        "lat",
        "lng",
      ],
      "properties": {
        "src": {
          "type": "string",
          "example": "http://example.com/foo.jpg"
        },
        "lat": {
          "type": "integer",
          "format": "int64"
        },
        "lng": {
          "type": "integer",
          "format": "int64"
        },
        "caption": {
          "type": "string"
        }
      }
    },
    "ImageRelationships": {
      "properties": {
        "user": {
          "$ref": "#/definitions/SimpleUser"
        },
        "albums": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SimpleAlbum"
          }
        }
      }
    },
    "SimpleUser": {
      "required": [
        "type",
        "id"
      ],
      "properties": {
        "type": {
          "type": "string",
          "example": "users"
        },
        "id": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "SimpleAlbum": {
      "required": [
        "type",
        "id"
      ],
      "properties": {
        "type": {
          "type": "string",
          "example": "albums"
        },
        "id": {
          "type": "integer",
          "format": "int64"
        }
      }
    },
    "ErrorResponse": {
      "required": [
        "errors"
      ],
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Error"
          }
        }
      }
    },
    "Error": {
      "required": [
        "status",
        "detail"
      ],
      "properties": {
        "status": {
          "type": "string",
          "example": "400"
        },
        "detail": {
          "type": "string",
          "example": "Detail concerning specific error"
        }
      }
    }
  }
}